<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gotoDomang.user.dao.UserDAO">
	<select id="existLoginId" parameterType="String" resultType="boolean">
		SELECT
			count(1)
		FROM
			`user`
		WHERE
			`loginID` = #{loginID}
	</select>
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginID`
			, `password`
			, `name`
			, `email`
			, `phoneNumber`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{loginID}
			, #{password}
			, #{name}
			, #{email}
			, #{phoneNumber}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.sns.user.model.User">
		SELECT
			`id` 
			,`loginID`
			, `password`
			, `name`
			, `email`
			, `phoneNumber`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE 
			`loginID` = #{loginID}
			AND `password` = #{password}
	</select>
	
	
	
</mapper>