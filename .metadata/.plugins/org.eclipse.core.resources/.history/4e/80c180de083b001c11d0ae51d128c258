<mapper namespace="com.gotoDomang.booking.dao.BookingDAO">
	<select id="selectBookingList" resultType="com.gotoDomang.booking.model.Booking">
		SELECT
			`id`
			,`hotelId`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`
	</select>
	
	
	<insert id="insertBooking" parameterType="map">
 		INSERT INTO `booking`(
 			`name` 
 			,`hotelId`
 			, `headcount`
 			, `day`
 			, `date`
 			, `phoneNumber`
 			, `state`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{name}
 			, #{hotelId}
 			, #{headcount}
 			, #{day}
 			, #{date}
 			, #{phoneNumber}
 			, #{state}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectHotel" parameterType="int" resultType="com.gotoDomang.booking.model.Booking">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}
 	</select>
</mapper>