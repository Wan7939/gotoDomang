 <mapper namespace="com.gotoDomang.hotel.dao.HotelDAO">
 
 <select id="selectHotelList" resultType="com.gotoDomang.hotel.model.Hotel">
		SELECT
			`id`
			,`hotelName`
			,`location`
			,`price`
			,`hotelNumber`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`hotel`
		ORDER BY `id` DESC
	</select>

	<select id="selectHotelListByLowPrice" parameterType="String"
		resultType="com.gotoDomang.hotel.model.Hotel">
		SELECT
		`id`
		,`hotelName`
		,`location`
		,`price`
		,`hotelNumber`
		,`content`
		,`imagePath`
		,`createdAt`
		,`updatedAt`
		FROM
		`hotel`
		ORDER BY price DESC;
	</select>

	<select id="selectHotelListByhighPrice" parameterType="String"
		resultType="com.gotoDomang.hotel.model.Hotel">
		SELECT
		`id`
		,`hotelName`
		,`location`
		,`price`
		,`hotelNumber`
		,`content`
		,`imagePath`
		,`createdAt`
		,`updatedAt`
		FROM
		`hotel`
		ORDER BY price ASC;
	</select>
	
	<select id="selectHotelListByLowPoint" parameterType="String"
		resultType="com.gotoDomang.hotel.model.Hotel">
		SELECT
			AVG(point) 
		FROM
			 `review`
		where `hotelId` = #{hotelId}
		 ORDER BY `point` DESC;
		
	</select>
	
	<insert id="insertHotel" parameterType="map">
			INSERT INTO `hotel`
			(
				`hotelName`
				,`location`
				,`price`
				,`hotelNumber`
				,`content`
				,`imagePath`
				,`createdAt`
				,`updatedAt`
			)
			VALUES
			(
				 #{hotelName}
				, #{location}
				, #{price}
				, #{hotelNumber}
				, #{content}
				, #{imagePath}
				, NOW()				
				, NOW()
			)
		</insert>
		<select id="selectHotel" resultType="com.gotoDomang.hotel.model.Hotel">
		SELECT
			`id`
			,`hotelName`
			,`location`
			,`price`
			,`hotelNumber`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`hotel`
		WHERE
			`id` = #{id}
	</select>
	<delete id="deleteHotel" parameterType="int">
		DELETE
		FROM
			`hotel`
		WHERE
			`id` = #{id}
	</delete>
	
		
</mapper>