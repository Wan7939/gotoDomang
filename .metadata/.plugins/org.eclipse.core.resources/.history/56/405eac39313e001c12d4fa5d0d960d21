@Service
public class ContentBO {
	
	@Autowired
	private BookingBO bookingBO;
	
	@Autowired
	private HotelBO hotelBO;
	
	public List<Content> getContentList(Integer userId) {
		List<Content> contentList = new ArrayList<>();
		
